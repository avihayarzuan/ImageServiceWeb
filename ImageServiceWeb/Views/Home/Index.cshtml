@model ImageServiceWeb.Models.StudentsModel


@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h1>Welcome To Image Service!</h1>
    <h2>
        Service Status
        @if (ViewBag.ServiceRunning)
        {
            <span style="font-weight: bold; font-size: x-large" class="badge badge-success">Running</span>
            <h3>
                Image Service containts
                <span style="font-weight: bold; font-size: x-large" class="badge badge-info">@ViewBag.NumPhotos</span>
                photos
            </h3>

        }
        else
        {
            <span style="font-weight: bold; font-size: x-large" class="badge badge-danger">Inactive</span>
        }
    </h2>
</div>


<p><u><b>Students:</b></u></p>
<table class="table-condensed">
    <thead>
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">ID</th>
            @foreach (var student in Model.StudentList)
            {
            <tr>
                <td>@Html.DisplayName(student.firstName.ToString())</td>
                <td>@Html.DisplayName(student.lastName.ToString())</td>
                <td>@Html.DisplayName(student.id.ToString())</td>
            </tr>
        }
        </thead>
    </table>