@model ImageServiceWeb.Models.ConfigModel



@{
    ViewBag.Title = "Config";
}
<style>
    table#t01 {
        width: 100%;
        font-size: 150%;
    }
</style>

<h2>Config</h2>
<table id="t01">
    <tr>
        <td><strong> Output Directory: </strong></td>
        <td>@Html.DisplayFor(model => model.Output)</td>
    </tr>
    <tr>
        <td><strong> Source Name: </strong></td>
        <td>@Html.DisplayFor(model => model.SourceName)</td>
    </tr>
    <tr>
        <td><strong> Log Name: </strong></td>
        <td>@Html.DisplayFor(model => model.LogName)</td>
    </tr>
    <tr>
        <td><strong> Thumbnail Size: </strong></td>
        <td>@Html.DisplayFor(model => model.ThumbnailSize)</td>
    </tr>
</table>
<br>
<br>

<table class="table">

    <thead>
        <tr>
            <th>Directory Name:</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Handlers)
        {
            if (!item.Equals(""))
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item)</td>
                    <td>@Html.ActionLink("Delete", "DeleteConfirm", "Home", new { dir = item},null)</td>
                    @*<td><button type="button" data-item="@item"> Delete</button></td>*@
                </tr>

            }
        }
    </tbody>
</table>

