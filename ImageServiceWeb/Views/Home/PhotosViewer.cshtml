
@{
    ViewBag.Title = "PhotosViewer";
}

<h2>PhotosViewer</h2>

<table id="t01">
    <tr>
        <td><strong> Name: </strong></td>
        <td>@ViewBag.name</td>
    </tr>
    <tr>
        <td><strong> Month Taken: </strong></td>
        <td>@ViewBag.year/@ViewBag.month</td>
    </tr>
</table>
<a href="@Url.Action("DeletePhotoConfirm", new { photo = @ViewBag.path })" id="btnDelete" class="btn btn-danger" role="button">Delete</a>
<input type="button" value="return" onclick='goBack()' class="btn btn-success" />
<img src="@ViewBag.pathOrigin" alt="">


<script>
    function goBack() {
        document.location = 'Photos'
    }
</script>