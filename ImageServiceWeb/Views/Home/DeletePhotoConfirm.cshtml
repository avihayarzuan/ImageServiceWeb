@{
    ViewBag.Title = "DeletePhotoConfirm";
}


<h2>DeletePhotoConfirm</h2>
<h4>Are you sure you want to delete <strong>@ViewBag.PhotoNameOrigin </strong> photo? </h4>
<img src="@ViewBag.PhotoNameOrigin" alt="" class="circular-image" width="200" height="150">
<br /><br />
<button type="button" id="confirm" class="btn btn-success" data-a="cc">Delete</button>
<input type="button" value="Cancel" onclick='goBack()' class="btn btn-danger" />


<script>
    function goBack() {
        document.location='Photos'
    }

    $("#confirm").click(function () {
        var input = '@ViewBag.PhotoNameSlashed';

        $.get("/Home/RemovePhoto", { photo: input }, function (data) { });
        document.location = 'Photos';
    });
</script>
